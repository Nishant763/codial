<li>
    <div id="post">
        <div id="user_name"><%= post.user.username%></div>
        <div id="post-content">
            <%= post.content %>
        </div>
        <div id="created-at">
            <small><%= post.createdAt %></small>
        </div>
        <% if(locals.user && locals.user.id == post.user.id) {%> 
        <div id="delete-post">
            <a href="/posts/destroy/<%= post.id%>" style="color: blue;">Delete Post</a>
        </div>
        <%}%>
    </div>
</li>